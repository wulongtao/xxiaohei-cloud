<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxiaohei.cloud.database.mapper.SysUserMapper">


    <select id="getByUsername" resultType="com.xxiaohei.cloud.database.entity.SysUserDO">
        SELECT * FROM `sys_user` WHERE `user_name`=#{username} LIMIT 1
    </select>
</mapper>
